### ALIASES ###

alias sdn='sudo shutdown -h now'
alias srb='sudo reboot'

alias p='paru'

alias ls='exa'
alias la='exa -a --group-directories-first'
alias ll='exa -l --group-directories-first'
alias lla='exa -la --group-directories-first'
alias lm='exa -t -1'

alias tree='exa --tree'

alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -v'
alias mkdir='mkdir -pv'

alias zip='zip -r'
alias untar='tar -zxvf'

alias ds='du -csh'
alias dss='du -hs * | sort -h'
alias dts='dss; ds; df -h /'

# Curl aliases
alias myip='curl ipinfo.io/ip'

# Code aliases
alias codium='codium .'
alias c='codium .'

# NVIM aliases
alias vim='nvim'
alias vi='nvim'
alias v='$EDITOR'
alias e="$EDITOR"

# GIT aliases
alias g='git'
alias gua='git remote | xargs -L1 git push --all'

# Youtube-dl aliases
alias yt='youtube-dl --add-metadata -i'
alias yta='yt -x -f bestaudio/best'
alias ytc='youtube-dl -f "bestvideo[height>=720]+bestaudio/best" -ciw -o "%(title)s.%(ext)s" -v'

# Colorizing normal commands
alias grep='grep --color=auto'
alias diff='diff --color=auto'
alias ccat='highlight --out-format=ansi'

alias reddit='rtv'
